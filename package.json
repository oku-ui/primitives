{
  "name": "oku-ui",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter='./packages/**'",
    "build:components": "turbo run build --filter='./packages/components/**'",
    "build:core": "turbo run build --filter='./packages/core/**'",
    "dev": "pnpm storybook dev -p 6006",
    "dev:all": "turbo run dev --filter='./packages/**' --concurrency $(($(ls -1 packages/components packages/core | wc -l)+3))",
    "dev:core": "turbo run dev --filter='./packages/core/**'",
    "dev:components": "turbo run dev --filter='./packages/components/**'",
    "play:vue": "turbo run dev --filter='./playground/vue3/**'",
    "play:nuxt": "turbo run dev --filter='./playground/nuxt3/**'",
    "play": "turbo run dev --filter='./playground/**'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "build:storybook": "pnpm storybook build"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.7",
    "@storybook/addon-interactions": "^7.0.7",
    "@storybook/addon-links": "^7.0.7",
    "@storybook/blocks": "^7.0.7",
    "@storybook/testing-library": "^0.1.0",
    "@storybook/vue3": "^7.0.7",
    "@storybook/vue3-vite": "^7.0.7",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vitest/coverage-c8": "^0.30.1",
    "@vue/test-utils": "^2.3.2",
    "chromatic": "^6.17.3",
    "eslint": "^8.39.0",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-storybook": "^0.6.11",
    "jsdom": "^21.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.7",
    "storybook-dark-mode": "^3.0.0",
    "tsup": "^6.7.0",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4",
    "unocss": "^0.51.8",
    "unplugin-vue-macros": "^2.1.1",
    "vite": "^4.3.3",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.30.1",
    "vue": "^3.3.0-beta.3"
  },
  "packageManager": "pnpm@8.3.0",
  "overrides": {
    "vue": "^3.3.0-beta.3"
  },
  "pnpm": {
    "overrides": {
      "vue": "^3.3.0-beta.3",
      "vite": "^4.3.1"
    }
  }
}
