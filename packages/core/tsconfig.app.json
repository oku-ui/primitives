{
  "extends": "@oku/tsconfig/tsconfig.vue.json",
  "compilerOptions": {
    /* Проекты */
    "incremental": true,
    "composite": true,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@oku-ui/*": ["./src/*"]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "constant/**/*"

  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/stories/*"
  ]
}
